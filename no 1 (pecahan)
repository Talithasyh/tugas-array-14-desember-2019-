#include <iostream>

using namespace std;

void pecahan () {
    int x,y;
}

int main () {
    int ax,bx,tambahx,kurangx,kalix,bagix,ay,by,tambahy,kurangy,kaliy,bagiy;
    
    cout << "masukan bilangan pembilang 1 = ";
    cin >> ax;
    cout << "masukan bilangan penyebut 1 = ";
    cin >> ay;
    cout << "masukan bilangan pembilang 2 = ";
    cin >> bx;
    cout << "masukan bilangan penyebut 2 = ";
    cin >> by;
    
    tambahx = (ax*by) + (bx*ay);
    tambahy = ay*by;
    kurangx = (ax*by) - (bx*ay);
    kurangy = ay*by;
    
    kalix = ax*bx;
    kaliy = ay*by;
    bagix = ax*by;
    bagiy = ay*bx;
    
    cout << "hasil jumlah = " << tambahx << "/" << tambahy << endl;
    cout << "hasil kurang = " << kurangx << "/" << kurangy << endl;
    cout << "hasil kali = " << kalix << "/" << kaliy << endl;
    cout << "hasil bagi = " << bagix << "/" << bagiy << endl;
    
    return 0;
}
